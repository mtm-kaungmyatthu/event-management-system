<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card shadow-sm mb-5">
        <div class="card-header text-center bg-primary text-white">
          <h3>Create Event</h3>
        </div>
        <div class="card-body">
          <%= form_with(model: @event, local: true) do |f| %>
            <div class="form-group mb-3">
              <%= f.label :name, class: 'form-label' %>
              <%= f.text_field :name, class: 'form-control' %>
              <% if @event.errors[:name].any? %>
                <div class="text-danger mt-1"><%= @event.errors.full_messages_for(:name).first %></div>
              <% end %>
            </div>

            <div class="form-group mb-3">
              <%= f.label :time, class: 'form-label' %>
              <%= f.time_field :time, class: 'form-control' %>
              <% if @event.errors[:time].any? %>
                <div class="text-danger mt-1"><%= @event.errors.full_messages_for(:time).first %></div>
              <% end %>
            </div>

            <div class="form-group mb-3">
              <%= f.label :date, class: 'form-label' %>
              <%= f.date_field :date, class: 'form-control' %>
              <% if @event.errors[:date].any? %>
                <div class="text-danger mt-1"><%= @event.errors.full_messages_for(:date).first %></div>
              <% end %>
            </div>

            <div class="form-group mb-3">
              <%= f.label :location, class: 'form-label' %>
              <%= f.text_field :location, class: 'form-control' %>
              <% if @event.errors[:location].any? %>
                <div class="text-danger mt-1"><%= @event.errors.full_messages_for(:location).first %></div>
              <% end %>
            </div>

            <div class="form-group mb-3">
              <%= f.label :description, class: 'form-label' %>
              <%= f.text_area :description, rows: 4, class: 'form-control' %>
              <% if @event.errors[:description].any? %>
                <div class="text-danger mt-1"><%= @event.errors.full_messages_for(:description).first %></div>
              <% end %>
            </div>

            <div class="d-flex justify-content-between">
              <%= link_to 'Cancel', events_path, class: 'btn btn-outline-secondary' %>
              <%= f.submit 'Create Event', class: 'btn btn-primary' %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
