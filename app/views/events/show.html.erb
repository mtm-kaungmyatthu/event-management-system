<div class="container mt-5">
  <div class="card shadow-lg">
    <div class="card-header text-center bg-primary text-white">
      <h2><%= @event.name %></h2>
    </div>

    <div class="card-body">
      <div class="row mb-3">
        <div class="col-md-6">
          <h5 class="fw-bold">Event Date</h5>
          <p class="text-muted"><i class="bi bi-calendar3"></i> <%= @event.date.strftime("%B %d, %Y") %></p>
        </div>
        <div class="col-md-6">
          <h5 class="fw-bold">Event Time</h5>
          <p class="text-muted"><i class="bi bi-clock"></i> <%= @event.date.strftime("%H:%M") %></p>
        </div>
      </div>

      <div class="mb-3">
        <h5 class="fw-bold">Location</h5>
        <p class="text-muted"><i class="bi bi-geo-alt"></i> <%= @event.location %></p>
      </div>

      <div class="mb-3">
        <h5 class="fw-bold">Description</h5>
        <p class="text-muted"><%= @event.description %></p>
      </div>
    </div>

    <div class="card-footer text-center">
      <%= link_to 'Register Event', register_event_path(@event), data: { turbo_method: :post, turbo_confirm: "Are you sure?", turbo: true }, class: 'btn btn-info' %>
      <%= link_to 'Edit Event', edit_event_path(@event), class: 'btn btn-warning' %>
      <%= link_to 'Back to Events', events_path, class: 'btn btn-secondary' %>
      <!-- Delete Button -->
      <%= link_to 'Delete Event', @event, data: { turbo_method: :delete, turbo_confirm: "Are you sure?", turbo: true }, class: 'btn btn-danger' %>
    </div>
  </div>
</div>
