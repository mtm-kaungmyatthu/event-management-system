<div class="container mt-5">
  <div class="card shadow-lg">
    <%= form_with(model: @event, local: true, class: 'needs-validation', novalidate: true) do |f| %>
      <div class="card-header text-center bg-warning text-white">
        <h2>Edit Event</h2>
      </div>

      <div class="card-body">
        <div class="mb-3">
          <%= f.label :name, "Event Name", class: 'form-label fw-bold' %>
          <%= f.text_field :name, class: 'form-control', placeholder: "Enter event name", required: true %>
          <div class="invalid-feedback">Please provide a valid event name.</div>
        </div>

        <div class="mb-3">
          <%= f.label :date, "Event Date", class: 'form-label fw-bold' %>
          <%= f.date_field :date, class: 'form-control', required: true %>
          <div class="invalid-feedback">Please provide a valid date.</div>
        </div>

        <div class="mb-3">
          <%= f.label :time, "Event Time", class: 'form-label fw-bold' %>
          <%= f.time_field :time, class: 'form-control', required: true %>
          <div class="invalid-feedback">Please provide a valid time.</div>
        </div>

        <div class="mb-3">
          <%= f.label :location, "Location", class: 'form-label fw-bold' %>
          <%= f.text_field :location, class: 'form-control', placeholder: "Enter event location", required: true %>
          <div class="invalid-feedback">Please provide a valid location.</div>
        </div>

        <div class="mb-3">
          <%= f.label :status, "Status", class: 'form-label fw-bold' %>
          <div class="form-check form-switch">
            <%= f.check_box :status, class: 'form-check-input', checked: @event.status? %>
          </div>
        </div>

        <div class="mb-3">
          <%= f.label :description, "Description", class: 'form-label fw-bold' %>
          <%= f.text_area :description, class: 'form-control', rows: 4, placeholder: "Enter event description" %>
        </div>
      </div>

      <div class="card-footer text-center">
        <%= f.submit "Update Event", class: 'btn btn-success' %>
        <%= link_to 'Back to Events', events_path, class: 'btn btn-secondary' %>
      </div>
    <% end %>
  </div>
</div>
