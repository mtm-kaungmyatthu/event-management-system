<div class="container mt-5">
  <h1 class="mb-4 text-center">Registered Event List</h1>

  <% if @events.any? %>
    <table class="table table-striped table-hover">
      <thead class="table-dark">
        <tr>
          <th>#</th>
          <th>Event Name</th>
          <th>Date</th>
          <th>Location</th>
          <th>Location</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @events.each_with_index do |event, index| %>
          <tr>
            <td><%= index + 1 %></td>
            <td><%= event.id %></td>
            <td><%= event.name %></td>
            <td><%= event.date %></td>
            <td><%= event.location %></td>
            <td>
              <%= link_to 'View', event_path(event), class: 'btn btn-sm btn-primary' %>
              <%= link_to 'Edit', edit_event_path(event), class: 'btn btn-sm btn-warning' %>
              <%= link_to 'Delete', event_path(event), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-danger' %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <div class="alert alert-info text-center">
      No users found.
    </div>
  <% end %>
</div>
