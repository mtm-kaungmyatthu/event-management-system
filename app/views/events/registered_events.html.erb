<div class="container mt-5">
  <h1 class="mb-4 text-center">Registered Event List</h1>

  <% if @events.any? %>
    <table class="table table-striped table-hover">
      <thead class="table-dark">
        <tr>
          <th>No</th>
          <th>Event Name</th>
          <th>Date</th>
          <th>Time</th>
          <th>Location</th>
          <th>Status</th>
        </tr>
      </thead>
      <tbody>
        <% @events.each_with_index do |event, index| %>
          <tr>
            <td><%= index + 1 %></td>
            <td><%= link_to event.name, event_path(event), class: 'text-decoration-none' %></td>
            <td><%= event.date %></td>
            <td><%= event.time.strftime('%H:%M') %></td>
            <td><%= event.location %></td>
            <td>
              <span class="badge <%= event.status? ? 'bg-success' : 'bg-danger' %>">
                <%= event.status? ? 'Active' : 'Inactive' %>
              </span>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <div class="alert alert-info text-center">
      No users found.
    </div>
  <% end %>
</div>
