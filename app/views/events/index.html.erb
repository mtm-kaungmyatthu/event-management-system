<div class="container mt-5">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="text-center">My Event List</h1>
    <%= link_to 'Create New Event', new_event_path, class: 'btn btn-success btn-sm' %>
  </div>

  <% if @events.any? %>
    <table class="table table-striped table-hover">
      <thead class="table-dark">
        <tr>
          <th>#</th>
          <th>Event ID</th>
          <th>Event Name</th>
          <th>Date</th>
          <th>Location</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @events.each_with_index do |event, index| %>
          <tr>
            <td><%= index + 1 %></td>
            <td><%= event.id %></td>
            <td><%= event.name %></td>
            <td><%= event.date %></td>
            <td><%= event.location %></td>
            <td>
              <%= link_to 'View', event_path(event), class: 'btn btn-sm btn-primary' %>
              <%= link_to 'Edit', edit_event_path(event), class: 'btn btn-sm btn-warning' %>
              <%= link_to 'Delete', event_path(event), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-danger' %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <div class="d-flex justify-content-end mt-4">
      <%= paginate @events %>
    </div>

  <% else %>
    <div class="alert alert-info text-center">
      No events found.
    </div>
  <% end %>
</div>
