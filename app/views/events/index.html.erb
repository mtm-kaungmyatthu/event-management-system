<%# app/views/events/index.html.erb %>
<div class="container mt-5">
  <h1>Upcoming Events</h1>
  <%= link_to 'Create Event', new_event_path, class: 'btn btn-primary mb-3' %>
  <div class="list-group">
    <% @events.each do |event| %>
      <div class="list-group-item">
        <h5><%= link_to event.name, event_path(event) %></h5>
        <p><%= event.location %> - <%= event.date.strftime('%B %d, %Y %H:%M') %></p>
        <p><%= event.description.truncate(100) %></p>
      </div>
    <% end %>
  </div>
</div>

<!-- Table of Recent Events -->
<h2>Recent Events</h2>
<div class="table-responsive">
  <table class="table table-striped table-sm">
    <thead>
      <tr>
        <th>#</th>
        <th>Event Name</th>
        <th>Date</th>
        <th>Location</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @events.each do |event| %>
        <tr>
          <td><%= event.id %></td>
          <td><%= event.name %></td>
          <td><%= event.date %></td>
          <td><%= event.location %></td>
          <td>
            <%= link_to 'Edit', edit_event_path(event), class: 'btn btn-sm btn-primary' %>
            <%= link_to 'Delete', event_path(event), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-danger' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

