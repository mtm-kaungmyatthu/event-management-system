<div class="container mt-5">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="text-center">User List</h1>
    <%= link_to 'Create New User', new_user_path, class: 'btn btn-success btn-sm' %>
  </div>

  <% if @users.any? %>
    <table class="table table-striped table-hover">
      <thead class="table-dark">
        <tr>
          <th>#</th>
          <th>Name</th>
          <th>Email</th>
          <th>Role</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @users.each_with_index do |user, index| %>
          <tr>
            <td><%= index + 1 %></td>
            <td><%= user.name %></td>
            <td><%= user.email %></td>
            <td><%= user.email %></td>
            <td>
              <%= link_to 'View', user_path(user), class: 'btn btn-sm btn-primary' %>
              <%= link_to 'Edit', edit_user_path(user), class: 'btn btn-sm btn-warning' %>
              <%= link_to 'Delete', user_path(user), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-danger' %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <div class="alert alert-info text-center">
      No users found.
    </div>
  <% end %>
</div>
