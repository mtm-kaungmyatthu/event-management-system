<%# app/views/users/new.html.erb %>
<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card shadow-sm">
        <div class="card-header text-center bg-primary text-white">
          <h3>Create User</h3>
        </div>
        <div class="card-body">
          <%= form_with(model: @user, local: true, url: users_path) do |f| %>
            <div class="form-group mb-3">
              <%= f.label :name, class: 'form-label' %>
              <%= f.text_field :name, class: 'form-control', placeholder: 'Enter full name' %>
            </div>

            <div class="form-group mb-3">
              <%= f.label :email, class: 'form-label' %>
              <%= f.email_field :email, class: 'form-control', placeholder: 'Enter email address' %>
            </div>

            <div class="form-group mb-3">
              <%= f.label :password, class: 'form-label' %>
              <%= f.password_field :password, class: 'form-control', placeholder: 'Enter password' %>
            </div>

            <div class="form-group mb-3">
              <%= f.label :role, class: 'form-label' %>
              <%= f.select :role, [["Admin", "admin"], ["Member", "member"]], {}, class: 'form-select' %>
            </div>

            <div class="d-grid">
              <%= f.submit 'Create User', class: 'btn btn-primary btn-block' %>
            </div>
          <% end %>

          <div class="text-center mt-3">
            <%= link_to 'Back to Users', users_path, class: 'btn btn-link' %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
