<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card shadow-sm">
        <div class="card-header text-center bg-primary text-white">
          <h3>Create User</h3>
        </div>
        <div class="card-body">
          <%= form_with(model: @user, local: true, url: create_new_user_users_path) do |f| %>
            <div class="form-group mb-3">
              <%= f.label :name, class: 'form-label' %>
              <%= f.text_field :name, class: 'form-control', placeholder: 'Enter full name' %>
              <% if @user.errors[:name].any? %>
                <div class="text-danger mt-1"><%= @user.errors.full_messages_for(:name).first %></div>
              <% end %>
            </div>

            <div class="form-group mb-3">
              <%= f.label :email, class: 'form-label' %>
              <%= f.email_field :email, class: 'form-control', placeholder: 'Enter email address' %>
              <% if @user.errors[:email].any? %>
                <div class="text-danger mt-1"><%= @user.errors.full_messages_for(:email).first %></div>
              <% end %>
            </div>

            <div class="form-group mb-3">
              <%= f.label :password, class: 'form-label' %>
              <%= f.password_field :password, class: 'form-control', placeholder: 'Enter password' %>
              <% if @user.errors[:password].any? %>
                <div class="text-danger mt-1"><%= @user.errors.full_messages_for(:password).first %></div>
              <% end %>
            </div>

            <div class="form-group mb-3">
              <%= f.label :role, class: 'form-label' %>
              <%= f.select :role, [["Admin", "admin"], ["Member", "member"]], {}, class: 'form-select' %>
              <% if @user.errors[:role].any? %>
                <div class="text-danger mt-1"><%= @user.errors.full_messages_for(:role).first %></div>
              <% end %>
            </div>

            <div class="d-flex justify-content-between">
              <%= link_to 'Cancel', users_path, class: 'btn btn-outline-secondary' %>
              <%= f.submit 'Create User', class: 'btn btn-primary' %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>